<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jinq</groupId>
  <artifactId>jinq</artifactId>
  <version>0.2.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <name>Jinq</name>
  <description>Jinq project for providing support for functional-style queries to Java 8</description>
  <url>http://www.jinq.org</url>
  
  <licenses>
    <license>
      <name>BSD 2-Clause License</name>
      <url>http://opensource.org/licenses/BSD-2-Clause</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <scm>
  	<url>https://github.com/my2iu/Jinq</url>
  	<connection>scm:git:https://github.com/my2iu/Jinq.git</connection>
  </scm>
  
  <developers>
    <developer>
      <name>Ming-Yee Iu</name>
      <email>maven@jinq.org</email>
      <id>my2iu</id>
    </developer>
  </developers>
	
  <modules>
  	<module>orm</module>
  	<module>api</module>
  	<module>analysis</module>
  	<module>queryll2</module>
  	<module>demogen</module>
  	<module>demosrc</module>
    <module>jinq-jpa</module>
    <module>jinq-jooq</module>
  </modules>
  
  <build>
    <extensions>
      <!-- So that we can deploy artifacts to a local file system for later upload to the cloud -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-file</artifactId>
        <version>2.6</version>
      </extension>
    </extensions>
  
    <!-- Should default to compiling things using Java 8 -->
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.8</source>
            <target>1.8</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <!-- For building the source packages -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

       <!-- For generating packages of JavaDoc -->        
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    

    <directory>target/jinq-all</directory>
  </build>


  <distributionManagement>
    <repository>
      <id>file-repository</id>
      <url>file:../../../Jinq/mavenrepo</url>
    </repository>
  </distributionManagement>
</project>